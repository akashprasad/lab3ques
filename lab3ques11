# lab3ques11
#include <iostream>
using namespace std;
int main()
{
    int day;
    cout<<"enter the day of week \n";
    cin>>day;
    switch(day)
    {
    case 1:
    cout<<"day is sunday";
    break;
    case 2:
    cout<<"day is monday";
    break;
    case 3:
    cout<<"day is tuesday";
    break;
    case 4:
    cout<<"day is wednesday";
    break;
    case 5:
    cout<<"day is thursday";
    break;
    case 6:
    cout<<"day is friday";
    break;
    case 7:
    cout<<"day is saturday";
    break;
    default:
    cout<<"invalid choice";
    }
    return 0;
}

 
