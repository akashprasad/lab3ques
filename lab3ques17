#include <iostream>
#include <math.h>
using namespace std;
int main()
{
    float a,b,c,x1,x2,discriminent,real part,imagionary part;
    cout << "enter the coefficients a,b,c";
    cin >>a >>b >>c;
    discriminent = b*b-4ac;
    if( discriminent > 0 )
    {
    x1 = -b + sqrt discriminent / 2 * a;
    x2 = -b - sqrt discriminent / 2 * a;
    cout << " the roots are real and different. " << endl;
    cout << "x1 = " x1  << endl;
    cout << "x2 = " x2  << endl;
    }
    else if ( discriminent = 0 )
    cout << "the roots are real and equal. " << endl;
    x1 = -b + sqrt discriminent / 2 a " << endl;
    cout << " x1 = x2 = " << x1 << endl;
    }
    else
    {
    real part = - b / 2  * a;
    imagionary part = sqrt ( - discriminent ) / 2 * a;
    cout << " roots are complex and different. " << endl;
    cout << " x1 = " << real part <<  + <<  " x2 " <<  imagionary part <<  " i " << endl;
    cout << " x2 =  " << real part << - << " x1 " << " imagionary part << " i " "<< endl;
    return 0;
    }


