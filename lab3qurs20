# lab3ques20
#include <iostream>
using namespace std;
int main()
{
    float bs,gs,hra,da;
    cout<<"input basic salary of a person :\n";
    cin>>bs;
    if(bs<=10000)
    {
    hra=0.2*bs;
    da=0.8*bs;
    }
    else if(bs<=20000)
    {
    hra=0.25*bs;
    da=0.9*bs;
    }
    else(bs>20000)
    {
    hra=0.3*bs;
    da=0.95*bs;
    }
    return 0;
}
